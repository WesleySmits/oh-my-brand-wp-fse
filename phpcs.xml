<?xml version="1.0"?>
<ruleset name="Oh My Brand Theme">
    <description>PHPCS rules for Oh My Brand WordPress FSE Theme</description>

    <!-- Scan these files -->
    <file>./functions.php</file>
    <file>./includes</file>
    <!-- TODO: Re-enable blocks after refactoring -->
    <!-- <file>./blocks</file> -->

    <!-- Exclude patterns -->
    <exclude-pattern>/vendor/*</exclude-pattern>
    <exclude-pattern>/node_modules/*</exclude-pattern>
    <exclude-pattern>*.min.php</exclude-pattern>
    <exclude-pattern>/tests/*</exclude-pattern>
    <exclude-pattern>/coverage/*</exclude-pattern>

    <!-- Show progress and colors -->
    <arg value="ps"/>
    <arg name="colors"/>
    <arg name="report-width" value="120"/>
    <arg name="extensions" value="php"/>

    <!-- Use WordPress Coding Standards -->
    <rule ref="WordPress">
        <!-- Allow file names that don't match class names (common in themes) -->
        <exclude name="WordPress.Files.FileName.InvalidClassFileName"/>
        <exclude name="WordPress.Files.FileName.NotHyphenatedLowercase"/>
    </rule>

    <!-- Use WordPress-Extra for recommended best practices -->
    <rule ref="WordPress-Extra">
        <!-- Allow short array syntax [] instead of array() - modern PHP standard -->
        <exclude name="Universal.Arrays.DisallowShortArraySyntax"/>
    </rule>

    <!-- Check for PHP 8.4+ cross-version compatibility -->
    <rule ref="PHPCompatibilityWP"/>
    <config name="testVersion" value="8.4-"/>
    <config name="minimum_wp_version" value="6.4"/>

    <!-- Text domain for translations -->
    <rule ref="WordPress.WP.I18n">
        <properties>
            <property name="text_domain" type="array">
                <element value="oh-my-brand"/>
            </property>
        </properties>
    </rule>

    <!-- Prefixes for functions/classes/hooks -->
    <rule ref="WordPress.NamingConventions.PrefixAllGlobals">
        <properties>
            <property name="prefixes" type="array">
                <element value="omb_"/>
                <element value="OMB_"/>
                <element value="oh_my_brand"/>
            </property>
        </properties>
        <!-- Allow short prefix - 'omb' is unique enough for this theme -->
        <exclude name="WordPress.NamingConventions.PrefixAllGlobals.ShortPrefixPassed"/>
    </rule>

    <!-- Allow unused function parameters (common in WordPress filter callbacks) -->
    <rule ref="Generic.CodeAnalysis.UnusedFunctionParameter">
        <severity>0</severity>
    </rule>

    <!-- Ensure proper escaping -->
    <rule ref="WordPress.Security.EscapeOutput"/>

    <!-- Ensure proper sanitization -->
    <rule ref="WordPress.Security.NonceVerification"/>

    <!-- Validate and sanitize input -->
    <rule ref="WordPress.Security.ValidatedSanitizedInput"/>
</ruleset>

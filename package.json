{
    "name": "oh-my-brand",
    "version": "1.0.0",
    "description": "Oh My Brand! WordPress FSE Theme",
    "type": "module",
    "scripts": {
        "build": "wp-scripts build && node scripts/copy-block-assets.cjs",
        "start": "wp-scripts start",
        "lint": "npm run lint:js && npm run lint:css",
        "lint:js": "wp-scripts lint-js 'src/**/*.js'",
        "lint:css": "stylelint 'assets/css/**/*.css' 'src/**/*.css'",
        "lint:fix": "npm run lint:js -- --fix && npm run lint:css -- --fix",
        "format": "wp-scripts format",
        "format:check": "prettier --check .",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:coverage": "vitest run --coverage",
        "test:e2e": "playwright test",
        "test:e2e:ui": "playwright test --ui",
        "test:e2e:headed": "playwright test --headed",
        "typecheck": "tsc --noEmit",
        "prepare": "husky",
        "packages-update": "wp-scripts packages-update"
    },
    "lint-staged": {
        "*.js": [
            "wp-scripts lint-js --fix",
            "prettier --write"
        ],
        "*.css": [
            "stylelint --fix",
            "prettier --write"
        ],
        "*.{json,md,yml,yaml}": [
            "prettier --write"
        ],
        "*.php": "composer phpcs-staged"
    },
    "keywords": [
        "wordpress",
        "theme",
        "fse",
        "block-theme"
    ],
    "author": "Wesley Smits",
    "license": "GPL-2.0-or-later",
    "devDependencies": {
        "@commitlint/cli": "^19.6.1",
        "@commitlint/config-conventional": "^19.6.0",
        "@playwright/test": "^1.49.1",
        "@types/node": "^22.13.11",
        "@types/react": "^19.2.7",
        "@types/react-dom": "^19.2.3",
        "@types/wordpress__block-editor": "^15.0.0",
        "@types/wordpress__blocks": "^12.5.18",
        "@types/wordpress__components": "^23.8.0",
        "@types/wordpress__i18n": "^3.11.0",
        "@typescript-eslint/eslint-plugin": "^8.52.0",
        "@typescript-eslint/parser": "^8.52.0",
        "@vitest/coverage-v8": "^2.1.8",
        "@wordpress/scripts": "^30.0.0",
        "copy-webpack-plugin": "^13.0.1",
        "eslint-config-prettier": "^10.1.8",
        "happy-dom": "^15.11.7",
        "husky": "^9.1.7",
        "lint-staged": "^15.3.0",
        "stylelint": "^16.12.0",
        "stylelint-config-standard": "^36.0.1",
        "vitest": "^2.1.8"
    },
    "dependencies": {
        "@dnd-kit/core": "^6.3.1",
        "@dnd-kit/sortable": "^10.0.0",
        "@dnd-kit/utilities": "^3.2.2",
        "@wordpress/block-editor": "^14.0.0",
        "@wordpress/blocks": "^14.0.0",
        "@wordpress/components": "^29.0.0",
        "@wordpress/data": "^10.0.0",
        "@wordpress/element": "^6.0.0",
        "@wordpress/i18n": "^5.0.0",
        "@wordpress/icons": "^11.4.0",
        "@wordpress/interactivity": "^6.0.0"
    },
    "engines": {
        "node": ">=20.0.0"
    }
}

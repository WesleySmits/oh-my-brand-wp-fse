{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 3,
    "settings": {
        "color": {
            "palette": [
                {
                    "slug": "primary",
                    "color": "#0066cc",
                    "name": "Primary"
                },
                {
                    "slug": "primary-dark",
                    "color": "#004c99",
                    "name": "Primary Dark"
                },
                {
                    "slug": "secondary",
                    "color": "#6c757d",
                    "name": "Secondary"
                },
                {
                    "slug": "base",
                    "color": "#ffffff",
                    "name": "Base"
                },
                {
                    "slug": "contrast",
                    "color": "#1a1a1a",
                    "name": "Contrast"
                },
                {
                    "slug": "background",
                    "color": "#f8f9fa",
                    "name": "Background"
                }
            ],
            "gradients": [
                {
                    "slug": "primary-to-secondary",
                    "gradient": "linear-gradient(135deg, var(--wp--preset--color--primary) 0%, var(--wp--preset--color--secondary) 100%)",
                    "name": "Primary to Secondary"
                }
            ],
            "custom": true,
            "defaultPalette": false
        },
        "typography": {
            "fontFamilies": [
                {
                    "fontFamily": "'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif",
                    "slug": "body",
                    "name": "Body"
                },
                {
                    "fontFamily": "'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif",
                    "slug": "heading",
                    "name": "Heading"
                }
            ],
            "fontSizes": [
                {
                    "slug": "small",
                    "size": "0.875rem",
                    "name": "Small"
                },
                {
                    "slug": "medium",
                    "size": "1rem",
                    "name": "Medium"
                },
                {
                    "slug": "large",
                    "size": "1.25rem",
                    "name": "Large"
                },
                {
                    "slug": "x-large",
                    "size": "1.5rem",
                    "name": "Extra Large"
                },
                {
                    "slug": "xx-large",
                    "size": "2rem",
                    "name": "2X Large"
                }
            ],
            "customFontSize": true
        },
        "spacing": {
            "units": ["px", "rem", "%", "vw"],
            "spacingSizes": [
                {
                    "slug": "10",
                    "size": "0.25rem",
                    "name": "10"
                },
                {
                    "slug": "20",
                    "size": "0.5rem",
                    "name": "20"
                },
                {
                    "slug": "30",
                    "size": "1rem",
                    "name": "30"
                },
                {
                    "slug": "40",
                    "size": "1.5rem",
                    "name": "40"
                },
                {
                    "slug": "50",
                    "size": "2rem",
                    "name": "50"
                },
                {
                    "slug": "60",
                    "size": "3rem",
                    "name": "60"
                }
            ]
        },
        "layout": {
            "contentSize": "800px",
            "wideSize": "1200px"
        },
        "custom": {
            "lineHeight": {
                "tight": "1.2",
                "normal": "1.5",
                "loose": "1.75"
            }
        }
    },
    "styles": {
        "color": {
            "background": "var(--wp--preset--color--base)",
            "text": "var(--wp--preset--color--contrast)"
        },
        "typography": {
            "fontFamily": "var(--wp--preset--font-family--body)",
            "fontSize": "var(--wp--preset--font-size--medium)",
            "lineHeight": "var(--wp--custom--line-height--normal)"
        },
        "spacing": {
            "blockGap": "var(--wp--preset--spacing--30)"
        },
        "elements": {
            "heading": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--heading)",
                    "fontWeight": "700",
                    "lineHeight": "var(--wp--custom--line-height--tight)"
                }
            },
            "link": {
                "color": {
                    "text": "var(--wp--preset--color--primary)"
                },
                ":hover": {
                    "color": {
                        "text": "var(--wp--preset--color--primary-dark)"
                    }
                }
            },
            "button": {
                "color": {
                    "background": "var(--wp--preset--color--primary)",
                    "text": "var(--wp--preset--color--base)"
                },
                "typography": {
                    "fontWeight": "600"
                },
                "border": {
                    "radius": "4px"
                },
                ":hover": {
                    "color": {
                        "background": "var(--wp--preset--color--primary-dark)"
                    }
                }
            }
        },
        "blocks": {
            "theme-oh-my-brand/gallery": {
                "spacing": {
                    "padding": {
                        "top": "var(--wp--preset--spacing--40)",
                        "bottom": "var(--wp--preset--spacing--40)"
                    }
                }
            },
            "theme-oh-my-brand/hero": {
                "spacing": {
                    "padding": {
                        "top": "var(--wp--preset--spacing--60)",
                        "bottom": "var(--wp--preset--spacing--60)"
                    }
                }
            }
        }
    }
}

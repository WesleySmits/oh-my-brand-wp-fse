{
	"useTabs": true,
	"tabWidth": 4,
	"printWidth": 80,
	"singleQuote": true,
	"trailingComma": "es5",
	"bracketSameLine": false,
	"bracketSpacing": true,
	"semi": true,
	"arrowParens": "always",
	"parenSpacing": true,
	"endOfLine": "lf",
	"overrides": [
		{
			"files": "*.{css,sass,scss}",
			"options": {
				"singleQuote": false,
				"parenSpacing": false
			}
		},
		{
			"files": "*.json",
			"options": {
				"tabWidth": 4
			}
		},
		{
			"files": ["*.yml", "*.yaml"],
			"options": {
				"tabWidth": 2
			}
		}
	]
}

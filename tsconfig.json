{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "noEmit": true,
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        "isolatedModules": true,
        "resolveJsonModule": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "types": ["node", "vitest/globals"]
    },
    "include": ["blocks/**/*", "tests/**/*", "*.config.ts"],
    "exclude": ["node_modules", "vendor", "assets/js"]
}
